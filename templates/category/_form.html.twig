{{ form_start(form) }}
    <div class="grid grid-cols-2 gap-4">
        <div class="md:col-span-2">
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
            {{ form_errors(form.name) }}
        </div>

        {{ form_rest(form) }}
    </div>

    <div class="flex gap-3 mt-8">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-lg transition duration-200 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            {{ button_label|default('Save') }}
        </button>
        <a href="{{ path('app_category_index') }}" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-6 py-2 rounded-lg transition duration-200">
            Cancel
        </a>
    </div>
{{ form_end(form) }}
