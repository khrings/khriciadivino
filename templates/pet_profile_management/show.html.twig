{% extends '_layouts/master.html.twig' %}

{% block title %}{{ pet_profile_management.name }} - Details{% endblock %}

{% block body %}
<div style="padding: 20px;">
    <div class="container mx-auto px-1 py-1" style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">

        <!-- Header -->
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800">{{ pet_profile_management.name }} Pet Profile</h1>
            <a href="{{ path('app_pet_profile_management_index') }}" 
               style="display: inline-flex; align-items: center; gap: 8px; background: #10b981; color: white; padding: 10px 20px; border-radius: 6px; text-decoration: none; font-size: 14px; font-weight: 600; transition: background 0.2s;">
                <svg style="width: 16px; height: 16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Back to list
            </a>
        </div>

        <!-- Pet Profile Card -->
        <div style="display: flex; justify-content: center; margin-bottom: 40px;">
            <div style="background: white; border-radius: 16px; box-shadow: 0 4px 10px rgba(0,0,0,0.08); width: 320px; overflow: hidden; text-align: center;">
                
                <!-- Image Section -->
                <div style="background: #f8fafc; height: 180px; display: flex; align-items: center; justify-content: center;">
                    {% if pet_profile_management.image %}
                        <img src="{{ asset('uploads/pets/' ~ pet_profile_management.image) }}" alt="Pet Image" style="width: 100%; height: 100%; object-fit: cover;">
                    {% else %}
                        <span style="font-size: 80px;">üêæ</span>
                    {% endif %}
                </div>

                <!-- Content -->
                <div style="padding: 16px;">
                    <h3 style="font-size: 22px; font-weight: 700; color: #1f2937; margin-bottom: 8px;">
                        {{ pet_profile_management.name }}
                    </h3>

                    <div style="font-size: 14px; color: #6b7280; margin-bottom: 4px;">
                        <strong>Species:</strong> {{ pet_profile_management.Species }}
                    </div>
                    <div style="font-size: 14px; color: #6b7280; margin-bottom: 4px;">
                        <strong>Breed:</strong> {{ pet_profile_management.Breed }}
                    </div>
                    <div style="font-size: 14px; color: #6b7280; margin-bottom: 4px;">
                        <strong>Age:</strong> {{ pet_profile_management.Age }} years
                    </div>
                    <div style="font-size: 14px; color: #6b7280; margin-bottom: 12px;">
                        <strong>Birth Date:</strong> {{ pet_profile_management.dateofbirth|date('M d, Y') }}
                    </div>

                    <div style="font-size: 12px; color: #9ca3af; margin-bottom: 16px;">
                        Pet ID: {{ pet_profile_management.id }}
                    </div>

                    <div style="display: flex; justify-content: center; gap: 8px;">
                        <a href="{{ path('app_pet_profile_management_edit', {'id': pet_profile_management.id}) }}"
                           style="background: #eab308; color: white; padding: 8px 14px; border-radius: 6px; text-decoration: none; font-size: 14px; font-weight: 600;">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                        </a>
                        <form method="post" action="{{ path('app_pet_profile_management_delete', {'id': pet_profile_management.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this pet profile?');"
                              style="margin: 0;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pet_profile_management.id) }}">
                            <button type="submit"
                                    style="background: #ef4444; color: white; padding: 8px 14px; border-radius: 6px; border: none; cursor: pointer; font-size: 14px; font-weight: 600;">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}
