{% extends '_layouts/master.html.twig' %}

{% block title %}PetProfileManagement{% endblock %}

{% block body %}
    <h1>PetProfileManagement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pet_profile_management.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pet_profile_management.name }}</td>
            </tr>
            <tr>
                <th>Species</th>
                <td>{{ pet_profile_management.Species }}</td>
            </tr>
            <tr>
                <th>Breed</th>
                <td>{{ pet_profile_management.Breed }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ pet_profile_management.Age }}</td>
            </tr>
            <tr>
                <th>Dateofbirth</th>
                <td>{{ pet_profile_management.dateofbirth }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if pet_profile_management.image %}
                        <img src="{{ asset('uploads/pets/' ~ pet_profile_management.image) }}" alt="Pet Image" style="width: 100px; height: 100px;">
                    {% else %}
                        No Image
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pet_profile_management_index') }}">back to list</a>

    <a href="{{ path('app_pet_profile_management_edit', {'id': pet_profile_management.id}) }}">edit</a>

    {{ include('pet_profile_management/_delete_form.html.twig') }}
{% endblock %}
