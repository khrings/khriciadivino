{% extends '_layouts/master.html.twig' %}

{% block title %}Pet Profile Management{% endblock %}

{% block body %}
<div style="padding: 20px;">
    <div class="container mx-auto px-1 py-1" style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800">Pet Profile Management</h1>
            <a href="{{ path('app_pet_profile_management_new') }}"
               style="display: inline-flex; align-items: center; gap: 8px; background: #10b981; color: white; padding: 10px 20px; border-radius: 6px; text-decoration: none; font-size: 14px; font-weight: 600; transition: background 0.2s;">
                <svg style="width: 16px; height: 16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Add New Pet Profile
            </a>
        </div>

        {% if pet_profile_managements is empty %}
            <div style="text-align: center; color: #6b7280; font-size: 16px; margin-top: 40px;">
                No pet profiles found.
            </div>
        {% else %}
        <!-- Pet Profile Cards Grid -->
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 20px;">
            {% for pet_profile_management in pet_profile_managements %}
                <div style="background: white; border-radius: 16px; box-shadow: 0 3px 10px rgba(0,0,0,0.08); overflow: hidden; transition: transform 0.2s ease;">
                    <!-- Image Section -->
                    <div style="background: #f8fafc; height: 180px; display: flex; align-items: center; justify-content: center; position: relative;">
                        {% if pet_profile_management.image %}
                            <img src="{{ asset('uploads/pets/' ~ pet_profile_management.image) }}" alt="Pet Image" style="width: 100%; height: 100%; object-fit: cover;">
                        {% else %}
                            <span style="font-size: 60px;">üêæ</span>
                        {% endif %}
                    </div>

                    <!-- Card Content -->
                    <div style="padding: 16px;">
                        <h3 style="font-size: 20px; font-weight: 600; color: #1f2937; margin-bottom: 8px;">
                            {{ pet_profile_management.name }}
                        </h3>

                        <div style="font-size: 14px; color: #6b7280; margin-bottom: 4px;">
                            <strong>Species:</strong> {{ pet_profile_management.Species }}
                        </div>
                        <div style="font-size: 14px; color: #6b7280; margin-bottom: 4px;">
                            <strong>Breed:</strong> {{ pet_profile_management.Breed }}
                        </div>
                        <div style="font-size: 14px; color: #6b7280; margin-bottom: 4px;">
                            <strong>Age:</strong> {{ pet_profile_management.Age }} years
                        </div>
                        <div style="font-size: 14px; color: #6b7280; margin-bottom: 12px;">
                            <strong>Birth Date:</strong> {{ pet_profile_management.dateofbirth }}
                        </div>

                        <div style="display: flex; justify-content: center; gap: 8px;">
                            <a href="{{ path('app_pet_profile_management_show', {'id': pet_profile_management.id}) }}"
                               style="background: #3b82f6; color: white; padding: 6px 10px; border-radius: 6px; text-decoration: none; font-size: 13px; font-weight: 600; transition: background 0.2s;">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                </svg>
                            </a>
                            <a href="{{ path('app_pet_profile_management_edit', {'id': pet_profile_management.id}) }}"
                               style="background: #eab308; color: white; padding: 6px 10px; border-radius: 6px; text-decoration: none; font-size: 13px; font-weight: 600; transition: background 0.2s;">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
