{% extends '_layouts/master.html.twig' %}

{% block title %}Stocks index{% endblock %}

{% block body %}
    <h1>Stocks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreateAt</th>
                <th>UpdateAt</th>
                <th>StockChangeLog</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.id }}</td>
                <td>{{ stock.createAt ? stock.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ stock.updateAt ? stock.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ stock.stockChangeLog }}</td>
                <td>
                    <a href="{{ path('app_stocks_show', {'id': stock.id}) }}">show</a>
                    <a href="{{ path('app_stocks_edit', {'id': stock.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stocks_new') }}">Create new</a>
{% endblock %}
