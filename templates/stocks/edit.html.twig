{% extends '_layouts/master.html.twig' %}

{% block title %}Edit Stocks{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 px-6 py-8 font-[Poppins]">
    <div class="max-w-4xl mx-auto bg-white shadow-md rounded-2xl p-8">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-2xl font-semibold text-gray-800">Edit Stock</h1>
            <a href="{{ path('app_stocks_index') }}" class="text-sm text-blue-600 hover:text-blue-800 font-medium transition">
                ‚Üê Back to Stocks
            </a>
        </div>
        

        <div class="border-t border-gray-200 pt-6">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Product</label>
                    {{ form_widget(form.productss, {'attr': {'class': 'w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Quantity Change</label>
                    {{ form_widget(form.quantityChange, {'attr': {'class': 'w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                </div>
            </div>

            <div class="flex justify-end mt-8">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-6 py-2.5 rounded-lg shadow transition">
                    Update Stock
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
