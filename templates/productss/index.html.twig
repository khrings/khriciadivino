{% extends '_layouts/master.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<div class="container mx-auto px-6 py-6" style="font-family: 'Poppins', 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
    <!-- Header Section -->
    <div class="flex flex-col sm:flex-row justify-between sm:items-center gap-4 mb-8">
        <h1 class="text-3xl font-bold text-gray-800 tracking-tight">Products</h1>
        <a href="{{ path('app_productss_new') }}"
           class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-xl transition duration-200 flex items-center gap-2 shadow-sm">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Create New Product
        </a>
    </div>

    <!-- Table Section -->
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden p-4">
        <div class="overflow-x-auto rounded-xl">
            <table id="productsTable" class="w-full text-sm text-gray-700 table-fixed">
                <thead class="bg-gray-100 border-b border-gray-200 text-xs uppercase tracking-wider">
                    <tr>
                        <th class="px-4 py-2 text-left font-semibold w-16">Image</th>
                        <th class="px-4 py-2 text-left font-semibold w-12">ID</th>
                        <th class="px-4 py-2 text-left font-semibold w-24">Name</th>
                        <th class="px-4 py-2 text-left font-semibold">Description</th>
                        <th class="px-4 py-2 text-left font-semibold w-20">Price</th>
                        <th class="px-4 py-2 text-left font-semibold w-16">Quantity</th>
                        <th class="px-4 py-2 text-left font-semibold w-20">Category</th>
                        <th class="px-4 py-2 text-center font-semibold w-32">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                {% for productss in productsses %}
                    <tr class="hover:bg-gray-50 transition duration-150">
                        <td class="px-4 py-2">
                            {% if productss.imagefilename %}
                                <img src="{{ asset('uploads/products/' ~ productss.imagefilename) }}"
                                     alt="{{ productss.name }}"
                                     class="w-12 h-12 object-cover rounded-lg shadow-sm">
                            {% else %}
                                <div class="w-12 h-12 bg-gray-200 rounded-lg flex items-center justify-center">
                                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                            {% endif %}
                        </td>
                        <td class="px-4 py-2 text-gray-900">{{ productss.id }}</td>
                        <td class="px-4 py-2 font-medium text-gray-900">{{ productss.name }}</td>
                        <td class="px-4 py-2 text-gray-600">{{ productss.description }}</td>
                        <td class="px-4 py-2 font-semibold text-gray-900">₱{{ productss.price|number_format(2, '.', ',') }}</td>
                        <td class="px-4 py-2 font-semibold text-gray-800">{{ productss.quantity }}</td>
                        <td class="px-4 py-2">
                            {% if productss.category %}
                                {{ productss.category.name }}
                            {% else %}
                                <span class="text-gray-400 italic">Uncategorized</span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-2 text-center">
                            <div class="flex justify-center gap-2">
                                <a href="{{ path('app_productss_show', {'id': productss.id}) }}"
                                   class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded-md flex items-center gap-1 text-xs font-medium shadow-sm transition duration-200">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                    </svg>
                                 
                                </a>
                                <a href="{{ path('app_productss_edit', {'id': productss.id}) }}"
                                   class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded-md flex items-center gap-1 text-xs font-medium shadow-sm transition duration-200">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                 
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="px-4 py-12 text-center text-gray-500">
                            <div class="flex flex-col items-center gap-2">
                                <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                                </svg>
                                <p class="text-lg font-medium">No products found</p>
                                <p class="text-sm">Get started by creating your first product</p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- ✅ DataTables Styling & Script -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<style>
/* ✅ Fitted layout with clean Tailwind-style DataTable */
.dataTables_wrapper {
    font-size: 0.9rem;
    color: #374151;
    margin-top: 1rem;
    width: 100%;
    max-width: 100%;
    overflow-x: auto;
}
.dataTables_filter input {
    border: 1px solid #d1d5db;
    border-radius: 8px;
    padding: 6px 10px;
    font-size: 0.9rem;
    outline: none;
    width: 200px;
}
.dataTables_filter input:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 0 2px rgba(59,130,246,0.2);
}
.dataTables_length select {
    border-radius: 8px;
    padding: 4px 6px;
    font-size: 0.9rem;
}
.dataTables_paginate a {
    border-radius: 6px !important;
    padding: 4px 10px !important;
}
.dataTables_info {
    font-size: 0.85rem;
    color: #6b7280;
}
</style>

<script>
    $(document).ready(function() {
        $('#productsTable').DataTable({
            pageLength: 7,
            order: [[1, "asc"]],
            columnDefs: [
                { orderable: false, targets: [0, 7] } // Disable sorting for Image & Actions
            ],
            language: {
                search: "_INPUT_",
                searchPlaceholder: "Search products...",
                lengthMenu: "Show _MENU_ entries"
            }
        });
    });
</script>
{% endblock %}
