{% extends 'base.html.twig' %}

{% block title %}Products | PawStuff{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 50%, #3b82f6 100%);
            min-height: 100vh;
            padding: 2rem 1rem;
            margin: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }
    
        .products-container {
            max-width: 1400px;
            margin: 0 auto;
            animation: fadeIn 0.6s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .header-section {
            background: white;
            color: #1e293b;
            padding: 3rem 2.5rem;
            border-radius: 20px;
            margin-bottom: 2rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            position: relative;
            overflow: hidden;
        }

        .header-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(236, 72, 153, 0.1) 0%, transparent 70%);
            border-radius: 50%;
        }

        .header-section::after {
            content: 'üêæ';
            position: absolute;
            font-size: 15rem;
            right: -3rem;
            bottom: -5rem;
            opacity: 0.05;
            transform: rotate(-15deg);
        }
        
        .header-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: relative;
            z-index: 1;
            flex-wrap: wrap;
            gap: 1.5rem;
        }

        .header-text h1 {
            margin: 0 0 0.5rem 0;
            font-size: 2.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .paw-icon {
            font-size: 2.5rem;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-8px); }
        }
        
        .header-text p {
            margin: 0;
            color: #64748b;
            font-size: 1.125rem;
        }
        
        .create-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
            color: white;
            padding: 1rem 2rem;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 700;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
        }
        
        .create-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(139, 92, 246, 0.4);
        }

        .stats-row {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .stat-card {
            background: white;
            padding: 1.5rem;
            border-radius: 16px;
            flex: 1;
            min-width: 200px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
        }

        .stat-label {
            color: #64748b;
            font-size: 0.875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.5rem;
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 800;
            background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .table-container {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }
        
        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }
        
        .table thead {
            background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
            color: white;
        }
        
        .table thead th {
            padding: 1.25rem 1.5rem;
            text-align: left;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.875rem;
            letter-spacing: 1px;
        }
        
        .table tbody tr {
            border-bottom: 1px solid #f1f5f9;
            transition: all 0.2s ease;
        }
        
        .table tbody tr:hover {
            background: linear-gradient(135deg, #fdf2f8 0%, #f3e8ff 100%);
            transform: scale(1.01);
        }
        
        .table tbody tr:last-child {
            border-bottom: none;
        }
        
        .table tbody td {
            padding: 1.25rem 1.5rem;
            color: #475569;
            font-size: 0.95rem;
        }
        
        .table tbody td:first-child {
            font-weight: 700;
            color: #8b5cf6;
            font-family: 'Courier New', monospace;
        }
        
        .action-links {
            display: flex;
            gap: 0.5rem;
        }
        
        .action-links a {
            padding: 0.5rem 1.25rem;
            border-radius: 8px;
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 600;
            transition: all 0.2s ease;
        }
        
        .action-links a:first-child {
            background: #fdf2f8;
            color: #ec4899;
            border: 2px solid #ec4899;
        }
        
        .action-links a:first-child:hover {
            background: #ec4899;
            color: white;
            transform: translateY(-2px);
        }
        
        .action-links a:last-child {
            background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
            color: white;
        }
        
        .action-links a:last-child:hover {
            background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%);
            transform: translateY(-2px);
        }
        
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #94a3b8;
        }

        .empty-icon {
            font-size: 5rem;
            margin-bottom: 1rem;
            opacity: 0.5;
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-15px); }
        }

        .empty-state h3 {
            color: #64748b;
            font-size: 1.5rem;
            margin: 0 0 0.5rem 0;
        }

        .empty-state p {
            font-size: 1rem;
            margin: 0;
        }
        
        .price-tag {
            font-weight: 700;
            color: #10b981;
            font-size: 1.125rem;
        }

        .price-tag::before {
            content: '$';
        }
        
        .category-badge {
            display: inline-block;
            padding: 0.375rem 1rem;
            background: linear-gradient(135deg, #dbeafe 0%, #e0e7ff 100%);
            color: #6366f1;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
        }

        .product-name {
            font-weight: 600;
            color: #1e293b;
        }

        .product-description {
            color: #64748b;
            font-size: 0.875rem;
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        @media (max-width: 768px) {
            body {
                padding: 1rem;
            }

            .header-section {
                padding: 2rem 1.5rem;
            }

            .header-content {
                flex-direction: column;
                align-items: flex-start;
            }

            .header-text h1 {
                font-size: 1.75rem;
            }

            .create-btn {
                width: 100%;
                justify-content: center;
            }

            .table-container {
                overflow-x: auto;
            }

            .table {
                min-width: 800px;
            }

            .stats-row {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="products-container">
    <div class="header-section">
        <div class="header-content">
            <div class="header-text">
                <h1>
                    <span class="paw-icon">üêæ</span>
                    PawStuff Products
                </h1>
                <p>Manage your pet product inventory</p>
            </div>
            <a href="{{ path('app_productss_new') }}" class="create-btn">
                ‚ú® Add New Product
            </a>
        </div>
    </div>

    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-label">Total Products</div>
            <div class="stat-value">{{ productsses|length }}</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Categories</div>
            <div class="stat-value">üè∑Ô∏è</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Status</div>
            <div class="stat-value">‚úì</div>
        </div>
    </div>
    
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for productss in productsses %}
                <tr>
                    <td>#{{ productss.id }}</td>
                    <td><span class="product-name">{{ productss.name }}</span></td>
                    <td><span class="product-description">{{ productss.description }}</span></td>
                    <td><span class="price-tag">{{ productss.price }}</span></td>
                    <td><span class="category-badge">{{ productss.category }}</span></td>
                    <td>
                        <div class="action-links">
                            <a href="{{ path('app_productss_show', {'id': productss.id}) }}">üëÅÔ∏è View</a>
                            <a href="{{ path('app_productss_edit', {'id': productss.id}) }}">‚úèÔ∏è Edit</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="empty-state">
                        <div class="empty-icon">üê∂</div>
                        <h3>No Products Yet</h3>
                        <p>Start adding amazing products for our furry friends!</p>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}