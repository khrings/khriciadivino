{% extends '_layouts/master.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div>
    <h1>Product</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ productss.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if productss.imagefilename %}
                    <img src="{{ asset('uploads/products/' ~ productss.imagefilename) }}" 
     alt="{{ productss.name }}" 
     style="max-width: 100px; height: auto; border-radius: 8px;">
                    {% else %}
                        <div style="width: 100px; height: 100px; background-color: #e2e8f0; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                            <svg style="width: 20px; height: 20px; color: #9ca3af;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                        </div>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ productss.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ productss.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ productss.price }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ productss.category }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_productss_index') }}">back to list</a>

    <a href="{{ path('app_productss_edit', {'id': productss.id}) }}">edit</a>

    {{ include('productss/_delete_form.html.twig') }}
</div>
{% endblock %}